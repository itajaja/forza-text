<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Resource dictionary entries should be defined here. -->
	<Color x:Key="ControlBackgroundColor">#FF2D2D2D</Color>
	<SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />
	
	<Color x:Key="ControlBorderColor">#FF1F1F1F</Color>
	<SolidColorBrush x:Key="ControlBorderBrush" Color="{DynamicResource ControlBorderColor}" />
	
	<Color x:Key="ControlBorderColorMouseOver">Black</Color>
	<Color x:Key="ControlBackGroundColorMouseOver">#FF5A5A5A</Color>
	
	<Color x:Key="ControlContentColor">#FFB2B2B2</Color>
	<SolidColorBrush x:Key="ControlContentBrush" Color="{DynamicResource ControlContentColor}" />
</ResourceDictionary>